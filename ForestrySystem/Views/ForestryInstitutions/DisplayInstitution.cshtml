@using ForestrySystem.Enums
@using ForestrySystem.Data.Models
@model DisplayInstitutionCategory


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.institution.Name</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ForestrySystem.styles.css" asp-append-version="true" />
</head>
<body>
    <form asp-action="DisplayInstitution" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container">
            <h1>@Model.institution.Name</h1>

            <p><strong>Location:</strong> @Model.institution.Location</p>
            <p><strong>Phone:</strong> @Model.institution.Phone</p>
            <p><strong>Description:</strong> @Model.institution.Description</p>
            <div id="map"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7325.687993273408!2d27.402337617736844!3d42.45285393459321!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40a6eb7e8a995853%3A0x9f3b508a4516b2ad!2sProfessional%20Technical%20School!5e0!3m2!1sen!2sbg!4v1680857892574!5m2!1sen!2sbg" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>


            <h2>Данни за общата сеч по категории</h2>
            <div class="form-group">
                <label asp-for="categoryOfTimber" class="control-label">Категория:</label>
                <select asp-for="categoryOfTimber" class="form-select" asp-items="Html.GetEnumSelectList<CategoryOfTimberEnum>()">
                </select>
            </div>


            <h2>Данни за общата сеч по години</h2>
            <div class="form-group">
                <label asp-for="Year">Категория:</label>
                <select asp-for="Year" class="form-select">
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                    <option value="2022">2022</option>
                    <option value="2023">2022</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="TimberName" class="control-label">Категория:</label>
                <select asp-for="TimberName" class="form-select" asp-items="Html.GetEnumSelectList<OriginEnum>()">
                </select>
            </div>

            <input type="submit" value="Submit" class="btn btn-primary" />



        </div>
    </form>

</body>
