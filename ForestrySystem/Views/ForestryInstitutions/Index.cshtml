@model IEnumerable<ForestrySystem.Models.ForestryInstitution>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    <a class="btn btn-success" asp-action="DisplayInstitution" asp-route-id="@item.Id">Виж</a>
                </th>
                <th>
                    <a class="nav-link text-success text-md-left" asp-area="" asp-route-id="@item.Id">@item.Name</a>
                </th>
            </tr>
        }
    </tbody>
</table>


@if (User.IsInRole("Admin") || User.IsInRole("Expert"))
{

    <h1>Страница за редакция на данни за горска институция</h1>

    <br>
    <p>
        <a class="alert alert-success" asp-action="Create">Добави нов запис</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalArea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GreenArea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UrbanizedArea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GreenArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UrbanizedArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <a class="link-success" asp-action="Edit" asp-route-id="@item.Id">Редактирай</a>
                        <a class="link-success" asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                        <a class="link-success" asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

