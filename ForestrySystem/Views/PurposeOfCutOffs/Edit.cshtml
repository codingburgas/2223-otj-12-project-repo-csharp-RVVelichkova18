@model ForestrySystem.Models.PurposeOfCutOff

@{
    ViewData["Title"] = "Edit";
}

<h1>Редакция</h1>

<h4>Предназначение на общата сеч</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Purpose" class="control-label"></label>
                <input asp-for="Purpose" class="form-control" />
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentagePerYear" class="control-label"></label>
                <input asp-for="PercentagePerYear" class="form-control" />
                <span asp-validation-for="PercentagePerYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="alert alert-success" asp-action="Index">Обратно към предходната страница</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
