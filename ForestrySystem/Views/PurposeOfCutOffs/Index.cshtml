@model IEnumerable<ForestrySystem.Models.PurposeOfCutOff>

@{
    ViewData["Title"] = "Index";
}

<h1>Страница за редакция на данни за регулационни препоръки</h1>

<br>
<p>
    <a class="alert alert-success" asp-action="Create">Добави нов запис</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Purpose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentagePerYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Purpose)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentagePerYear)
                </td>
                <td>
                    <a class="badge badge-pill badge-successs" asp-action="Edit" asp-route-id="@item.Id">Редактирай</a>
                    <a class="badge badge-pill badge-success" asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                    <a class="abadge badge-pill badge-success" asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
