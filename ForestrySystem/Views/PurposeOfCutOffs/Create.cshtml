@model ForestrySystem.Models.PurposeOfCutOff

@{
    ViewData["Title"] = "Create";
}

<h1>Създаване на нов запис</h1>
<h4>Предназначение на общите сечи</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Purpose" class="control-label"></label>
                <input asp-for="Purpose" class="form-control" />
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentagePerYear" class="control-label"></label>
                <input asp-for="PercentagePerYear" class="form-control" />
                <span asp-validation-for="PercentagePerYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="alert alert-success" asp-action="Index">Обратно към предходна страница</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
